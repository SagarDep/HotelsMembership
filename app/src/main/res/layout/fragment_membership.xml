<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data class="MembershipItemBinding">
        <variable name="data" type="hotelsmembership.com.Model.Membership"/>
        <variable
            name="mlistener"
            type="hotelsmembership.com.Fragments.MembershipsFragment.OnListFragmentInteractionListener"/>
    </data>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/membership_card"
            android:layout_margin="8dp"
            app:cardElevation="@dimen/appbar_padding_top"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> mlistener.onListFragmentInteraction(data)}"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="8dp">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/front_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/hotelLogo"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_hotel_black_24dp"
                    android:scaleType="fitCenter"
                    app:image_url="@{data.hotel.hotelLogoURL}"
                    />
                <TextView
                    android:id="@+id/hotelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textAlignment="center"
                    android:layout_toRightOf="@id/hotelLogo"
                    android:layout_toEndOf="@id/hotelLogo"
                    android:shadowColor="@color/text_shadow"
                    android:hint="@string/hotel_name"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/blue_color"
                    android:textSize="@dimen/text_size_normal_plus"
                    android:text="@={data.hotel.hotelName}"
                    />
                <TextView
                    android:id="@+id/card_num_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/hotelLogo"
                    android:layout_toEndOf="@id/hotelLogo"
                    android:layout_below="@id/hotelName"
                    android:text="@string/card_number"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@color/blue_color"
                    android:textSize="9sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:hint="@string/card_number"
                    android:layout_below="@id/card_num_label"
                    android:layout_toRightOf="@id/hotelLogo"
                    android:layout_toEndOf="@id/hotelLogo"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/blue_color"
                    android:textSize="@dimen/text_size_normal_plus"
                    android:text="@={data.cardNumber}"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
</layout>