<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data class="MembershipItemBinding">
        <variable name="data" type="hotelsmembership.com.Model.Membership"/>
        <variable
            name="mlistener"
            type="hotelsmembership.com.Fragments.MembershipsFragment.OnListFragmentInteractionListener"/>
    </data>
        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/membership_card"-->
            <!--android:layout_margin="8dp"-->
            <!--app:cardElevation="@dimen/appbar_padding_top"-->
            <!--android:clickable="true"-->
            <!--android:focusable="true"-->

            <!--android:foreground="?android:selectableItemBackground"-->
            <!--app:cardCornerRadius="8dp">-->

            <android.support.constraint.ConstraintLayout
                android:id="@+id/front_card_container"
                android:layout_width="match_parent"
                android:background="@drawable/background"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> mlistener.onListFragmentInteraction(data)}"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hotelLogo"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_hotel_black_24dp"
                    android:scaleType="fitXY"
                    android:tint="@color/blue_color_gradient"
                    app:image_url="@{data.hotel.hotelLogoURL}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/hotelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:shadowColor="@color/text_shadow"
                    android:hint="@string/hotel_name"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/blue_color"
                    android:textSize="@dimen/text_size_normal_plus"
                    android:text="@={data.hotel.hotelName}"
                    app:layout_constraintLeft_toRightOf="@+id/hotelLogo"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/card_num_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_number"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@color/blue_color"
                    android:textSize="9sp"
                    app:layout_constraintLeft_toRightOf="@+id/hotelLogo"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/hotelName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/card_number"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/blue_color"
                    android:textSize="@dimen/text_size_normal_small"
                    android:text="@={data.cardNumber}"
                    app:layout_constraintLeft_toRightOf="@+id/hotelLogo"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/textView"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/card_expiry_label"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/card_num_label"
                    app:layout_constraintHorizontal_bias="0.6" />

                <TextView
                    android:id="@+id/card_expiry_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/valid_through"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@color/blue_color"
                    android:textSize="9sp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/card_num_label"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/hotelName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/expiry"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/blue_color"
                    android:textSize="@dimen/text_size_normal_small"
                    android:text="@={data.cardExpiryDate}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/card_num_label"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/textView2"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/card_expiry_label" />
            </android.support.constraint.ConstraintLayout>
        <!--</android.support.v7.widget.CardView>-->
</layout>