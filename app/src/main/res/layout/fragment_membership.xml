<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data class="MembershipItemBinding">
        <variable name="data" type="hotelsmembership.com.Model.Membership"/>
        <variable
            name="mlistener"
            type="hotelsmembership.com.Fragments.MembershipsFragment.OnListFragmentInteractionListener"/>
    </data>
<android.support.v7.widget.CardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:id="@+id/membership_card"
android:layout_margin="8dp"
app:cardElevation="@dimen/appbar_padding_top"
android:clickable="true"
android:focusable="true"
    android:onClick="@{() -> mlistener.onListFragmentInteraction(data)}"
android:foreground="?android:selectableItemBackground"
app:cardCornerRadius="4dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/front_card_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/cardview_dark_background"
        >
        <TextView
            android:id="@+id/front_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="25dp"
            android:hint="@string/card_placeholder"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="@android:color/white"
            android:textColorHint="@color/semi_white"
            android:textSize="@dimen/text_size_normal_plus"
            android:text="@={data.hotel.hotelName}"
            />
        <ImageView
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            app:image_url="@{data.hotel.hotelLogoURL}"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/front_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:hint="@string/card_placeholder"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="@android:color/white"
            android:textColorHint="@color/semi_white"
            android:textSize="@dimen/text_size_normal"
            android:text="@={data.cardNumber}"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_holder"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@color/semi_white"
                    android:textSize="9sp"

                    />

                <TextView
                    android:id="@+id/front_card_holder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/card_holder_name_sample"
                    android:text="@={data.memberName}"
                    android:maxWidth="150dp"
                    android:minWidth="150dp"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_small"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/semi_white" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_expiry_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expiry"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@color/semi_white"
                    android:textSize="9sp"

                    />

                <TextView
                    android:id="@+id/front_card_expiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/mm_yy"
                    android:text="@={data.cardExpiryDate}"
                    android:maxWidth="150dp"
                    android:minWidth="150dp"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_small"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/semi_white" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
    </layout>